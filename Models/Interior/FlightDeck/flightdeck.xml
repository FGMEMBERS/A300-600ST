<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>flightdeck.ac</path>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>LSfilter</object-name>
    <object-name>LSfilterBarr</object-name>
    <object-name>RSfilter</object-name>
    <object-name>RSfilterBarr</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Sun filters -->
  <animation>
    <name>PareSoleilGauche</name>
    <object-name>LSfilter</object-name>
    <object-name>LSfilterBarr</object-name>
  </animation>

  <animation>
    <name>PareSoleilDroit</name>
    <object-name>RSfilter</object-name>
    <object-name>RSfilterBarr</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PareSoleilGauche</object-name>
    <property>instrumentation/doors/wings/position-norm</property>
    <factor> 71.67 </factor>
    <axis>
      <x1-m> -0.624 </x1-m>
      <y1-m> -0.491 </y1-m>
      <z1-m>  1.259 </z1-m>
      <x2-m> -0.798 </x2-m>
      <y2-m> -0.088 </y2-m>
      <z2-m>  1.259 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>PareSoleilDroit</object-name>
    <property>instrumentation/doors/wings/position-norm</property>
    <factor> -71.67 </factor>
    <axis>
      <x1-m> -0.624 </x1-m>
      <y1-m>  0.491 </y1-m>
      <z1-m>  1.259 </z1-m>
      <x2-m> -0.798 </x2-m>
      <y2-m>  0.088 </y2-m>
      <z2-m>  1.259 </z2-m>
    </axis>
  </animation> 
  
  <!-- Panel -->
  <model>
    <path>Aircraft/A300-600ST/Models/Interior/FlightDeck/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.855 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.723 </z-m>
    </offsets>
  </model>

  <!-- Yokes -->
  <model>
    <path>Aircraft/A300-600ST/Models/Interior/FlightDeck/Yokes/AllyokeL.xml</path>
    <offsets>
      <x-m> -0.579 </x-m>
      <y-m> -0.614 </y-m>
      <z-m> -0.027 </z-m>
    </offsets>
  </model>
  
  <model>
    <path>Aircraft/A300-600ST/Models/Interior/FlightDeck/Yokes/AllyokeR.xml</path>
    <offsets>
      <x-m> -0.579 </x-m>
      <y-m>  0.614 </y-m>
      <z-m> -0.027 </z-m>
    </offsets>
  </model>
  
  <!-- Seats -->
